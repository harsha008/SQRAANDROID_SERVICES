<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/transparent</item><!--@color/primary</item>-->
        <item name="colorPrimaryDark">@android:color/transparent
        </item><!--@color/primary_dark</item>-->
        <item name="colorAccent">@color/accent</item>


    </style>


    <style name="MyTheme.Base" parent="@android:style/Theme.Holo.Light.DarkActionBar"></style>

    <style name="TextColorTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/dim_foreground_disabled_material_dark</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="DetailTextColorTheme" parent="@android:style/TextAppearance">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/background_floating_material_dark</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.ActionBar.Transparent.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
